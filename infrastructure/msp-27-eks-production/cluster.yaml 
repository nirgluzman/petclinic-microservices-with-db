# manifest file to be copied to Jenkins $HOME --> /var/lib/jenkins
# we create the eks-prod cluster as Jenkins user, so kubeconfig is created in Jenkis $HOME directory.

apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: petclinic-cluster
  region: us-east-1
availabilityZones: ["us-east-1a", "us-east-1b", "us-east-1c"]
managedNodeGroups:
  - name: ng-1
    instanceType: t3a.medium
    desiredCapacity: 2
    minSize: 2
    maxSize: 3
    volumeSize: 8
